<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:centerColor="#4CAF50"
                android:endColor="#2E7D32"
                android:startColor="#81C784"
                android:type="linear" />
            <!--<size android:height="60dp" android:width="100dp"/>-->
            <!--<padding android:top="10dp"/>-->
            <stroke android:width="2dp" android:color="@color/colorAccent"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <!--<gradient android:angle="270" android:endColor="#99BD4C"
                android:startColor="#A5D245"/>-->
            <gradient android:angle="270" android:endColor="@color/color1"
                android:startColor="@color/color1"/>
            <!--<size android:height="60dp" android:width="100dp"/>-->
            <!--<padding android:top="10dp"/>-->
            <stroke android:width="2dp" android:color="@color/colorAccent"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="#A8C3B0"
                android:startColor="#C6CFCE"/>
            <!--<size android:height="60dp" android:width="100dp"/>-->
            <!--<padding android:top="10dp"/>-->
            <stroke android:width="2dp" android:color="@color/colorAccent"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>
</selector>